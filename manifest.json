{
    "manifest_version": 3,
    "name": "Character Password",
    "description": "Use a character creator as an additional level of security for your passwords",
    "version": "1.0",
    "permissions": [
      "storage",
      "activeTab"
    ],
    "host_permissions": [
      "<all_urls>"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "setup.html",
      "default_icon": "Gloves.PNG"
    },
    "content_scripts": [ {
      "matches": ["http://*/*"],
      "js": ["setup.js"]
    } ]
  }